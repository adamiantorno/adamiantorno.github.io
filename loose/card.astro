---
const { project } = Astro.props;
const { data, slug } = project;

// Join categories into a comma-separated string for the data attribute
const categoriesString = data.categories.join(', ');
const primaryCategory = data.categories[0]; // Use first category as primary
---

<article 
  class="project-card" 
  data-categories={data.categories.map(c => c.toLowerCase()).join(',')}
  data-project-id={slug}
>
  <div class="card-inner">
    <div class="card-image-container">
      {data.image && (
        <img src={data.image} alt={data.title} class="card-image" />
      )}
      <div class="card-overlay"></div>
    </div>
    
    <div class="card-content">
      <div class="card-header">
        <div class="card-categories">
          {data.categories.map((category, index) => (
            <span class="card-category" data-primary={index === 0 ? 'true' : 'false'}>
              {category}
            </span>
          ))}
        </div>
        {data.tags && (
          <div class="card-tags">
            {data.tags.slice(0, 2).map(tag => (
              <span class="tag">{tag}</span>
            ))}
          </div>
        )}
      </div>
      
      <h3 class="card-title">{data.title}</h3>
      <p class="card-description">{data.description}</p>
      
      <div class="card-footer">
        <span class="read-more">
          Explore Project
          <svg width="16" height="16" viewBox="0 0 16 16" fill="none">
            <path d="M6 12L10 8L6 4" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
          </svg>
        </span>
      </div>
    </div>
  </div>
</article>

<!-- Hidden content for dialog -->
<div id={`project-content-${slug}`} style="display: none;">
  <div class="dialog-header">
    <div class="dialog-categories">
      {data.categories.map(category => (
        <span class="dialog-category">{category}</span>
      ))}
    </div>
    <h2 class="dialog-title">{data.title}</h2>
    <p class="dialog-description">{data.description}</p>
    
    {data.tags && (
      <div class="dialog-tags">
        {data.tags.map(tag => (
          <span class="dialog-tag">{tag}</span>
        ))}
      </div>
    )}
  </div>
  
  {data.image && (
    <div class="dialog-image-container">
      <img src={data.image} alt={data.title} class="dialog-image" />
    </div>
  )}
  
  <div class="dialog-body">
    <div class="prose">
      <project.render />
    </div>
  </div>
  
  {data.link && (
    <div class="dialog-footer">
      <a href={data.link} target="_blank" rel="noopener noreferrer" class="project-link">
        Visit Project
        <svg width="16" height="16" viewBox="0 0 16 16" fill="none">
          <path d="M12 4L4 12M12 4H6M12 4V10" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
        </svg>
      </a>
    </div>
  )}
</div>

<style>
  .project-card {
    cursor: pointer;
    border-radius: 16px;
    overflow: hidden;
    background: var(--color-surface);
    border: 1px solid var(--color-border);
    transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
    position: relative;
  }

  .project-card::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: linear-gradient(135deg, var(--color-primary), var(--color-secondary));
    opacity: 0;
    transition: opacity 0.4s ease;
    z-index: 0;
    border-radius: 16px;
  }

  .project-card:hover {
    transform: translateY(-8px);
    box-shadow: 0 20px 40px rgba(255, 107, 53, 0.2);
  }

  .project-card:hover::before {
    opacity: 0.05;
  }

  .card-inner {
    position: relative;
    z-index: 1;
  }

  .card-image-container {
    position: relative;
    width: 100%;
    height: 200px;
    overflow: hidden;
    background: linear-gradient(135deg, rgba(255, 107, 53, 0.1), rgba(247, 147, 30, 0.1));
  }

  .card-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.6s cubic-bezier(0.4, 0, 0.2, 1);
  }

  .project-card:hover .card-image {
    transform: scale(1.1);
  }

  .card-overlay {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: linear-gradient(to bottom, transparent 0%, rgba(10, 10, 15, 0.4) 100%);
  }

  .card-content {
    padding: 1.5rem;
  }

  .card-header {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    margin-bottom: 1rem;
    gap: 0.5rem;
  }

  .card-categories {
    display: flex;
    gap: 0.5rem;
    flex-wrap: wrap;
  }

  .card-category {
    font-size: 0.75rem;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    padding: 0.25rem 0.75rem;
    border-radius: 100px;
  }

  .card-category[data-primary="true"] {
    color: var(--color-primary);
    background: rgba(255, 107, 53, 0.1);
  }

  .card-category[data-primary="false"] {
    color: var(--color-text-muted);
    background: rgba(255, 255, 255, 0.05);
    border: 1px solid var(--color-border);
  }

  .card-tags {
    display: flex;
    gap: 0.5rem;
    flex-shrink: 0;
  }

  .tag {
    font-size: 0.7rem;
    color: var(--color-text-muted);
    background: rgba(255, 255, 255, 0.05);
    padding: 0.2rem 0.6rem;
    border-radius: 100px;
    border: 1px solid var(--color-border);
  }

  .card-title {
    font-family: 'Space Grotesk', sans-serif;
    font-size: 1.5rem;
    font-weight: 700;
    margin: 0 0 0.75rem;
    color: var(--color-text);
    line-height: 1.3;
  }

  .card-description {
    color: var(--color-text-muted);
    line-height: 1.6;
    margin: 0 0 1.5rem;
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  .card-footer {
    display: flex;
    justify-content: flex-end;
  }

  .read-more {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    color: var(--color-primary);
    font-weight: 600;
    font-size: 0.9rem;
    transition: gap 0.3s ease;
  }

  .project-card:hover .read-more {
    gap: 0.75rem;
  }

  /* Dialog Styles */
  .dialog-header {
    padding: 2rem;
    border-bottom: 1px solid var(--color-border);
  }

  .dialog-categories {
    display: flex;
    gap: 0.5rem;
    flex-wrap: wrap;
    margin-bottom: 0.75rem;
  }

  .dialog-category {
    font-size: 0.85rem;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    color: var(--color-primary);
    background: rgba(255, 107, 53, 0.1);
    padding: 0.4rem 1rem;
    border-radius: 100px;
  }

  .dialog-title {
    font-family: 'Space Grotesk', sans-serif;
    font-size: 2.5rem;
    font-weight: 700;
    margin: 0 0 1rem;
    color: var(--color-text);
    line-height: 1.2;
  }

  .dialog-description {
    font-size: 1.125rem;
    color: var(--color-text-muted);
    line-height: 1.7;
    margin: 0 0 1.5rem;
  }

  .dialog-tags {
    display: flex;
    gap: 0.75rem;
    flex-wrap: wrap;
  }

  .dialog-tag {
    font-size: 0.85rem;
    color: var(--color-text);
    background: rgba(255, 107, 53, 0.1);
    padding: 0.4rem 1rem;
    border-radius: 100px;
    border: 1px solid var(--color-border);
  }

  .dialog-image-container {
    width: 100%;
    max-height: 400px;
    overflow: hidden;
    background: var(--color-bg);
  }

  .dialog-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .dialog-body {
    padding: 2rem;
  }

  .prose {
    color: var(--color-text);
    line-height: 1.8;
  }

  .prose :global(h2) {
    font-family: 'Space Grotesk', sans-serif;
    font-size: 1.75rem;
    font-weight: 700;
    margin: 2rem 0 1rem;
    color: var(--color-text);
  }

  .prose :global(h3) {
    font-size: 1.25rem;
    font-weight: 600;
    margin: 1.5rem 0 0.75rem;
    color: var(--color-text);
  }

  .prose :global(p) {
    margin: 0 0 1rem;
    color: var(--color-text-muted);
  }

  .prose :global(ul), .prose :global(ol) {
    margin: 1rem 0;
    padding-left: 1.5rem;
  }

  .prose :global(li) {
    margin: 0.5rem 0;
    color: var(--color-text-muted);
  }

  .prose :global(code) {
    background: rgba(255, 107, 53, 0.1);
    padding: 0.2rem 0.5rem;
    border-radius: 4px;
    font-size: 0.9em;
    color: var(--color-primary);
  }

  .prose :global(pre) {
    background: var(--color-bg);
    padding: 1rem;
    border-radius: 8px;
    overflow-x: auto;
    margin: 1rem 0;
  }

  .dialog-footer {
    padding: 2rem;
    border-top: 1px solid var(--color-border);
  }

  .project-link {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    background: linear-gradient(135deg, var(--color-primary), var(--color-secondary));
    color: white;
    padding: 0.875rem 1.75rem;
    border-radius: 100px;
    font-weight: 600;
    text-decoration: none;
    transition: all 0.3s ease;
  }

  .project-link:hover {
    transform: translateY(-2px);
    box-shadow: 0 10px 30px rgba(255, 107, 53, 0.3);
  }
</style>