---
import { getCollection } from 'astro:content';
import Layout from '../layouts/Layout.astro';
import ProjectCard from '../components/ProjectCard.astro';

const projects = await getCollection('projects');

// Get unique categories from all projects
const allCategories = projects.flatMap(p => p.data.categories);
const categories = ['All', ...new Set(allCategories)];
---

<Layout title="Projects">
  <main>
    <div class="hero">
      <h1 class="title">Projects</h1>
      <p class="subtitle">Explore our work by category</p>
    </div>

    <section class="projects-section">
      <div class="container">
        <!-- Filter Buttons -->
        <div class="filter-container">
          {categories.map(category => (
            <button 
              class="filter-btn" 
              data-category={category.toLowerCase()}
              data-active={category === 'All' ? 'true' : 'false'}
            >
              {category}
            </button>
          ))}
        </div>

        <!-- Projects Grid -->
        <div class="projects-grid">
          {projects.map(project => (
            <ProjectCard project={project} />
          ))}
        </div>
      </div>
    </section>

    <!-- Dialog Container -->
    <dialog id="project-dialog" class="project-dialog">
      <div class="dialog-content">
        <button class="close-btn" aria-label="Close dialog">
          <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M18 6L6 18M6 6l12 12"/>
          </svg>
        </button>
        <div id="dialog-body"></div>
      </div>
    </dialog>
  </main>
</Layout>

<style>
  :root {
    --color-bg: #0a0a0f;
    --color-surface: #1a1a24;
    --color-primary: #ff6b35;
    --color-secondary: #f7931e;
    --color-text: #e8e8ee;
    --color-text-muted: #9999aa;
    --color-border: #2a2a38;
    --spacing-sm: 0.5rem;
    --spacing-md: 1rem;
    --spacing-lg: 2rem;
    --spacing-xl: 4rem;
  }

  main {
    min-height: 100vh;
    background: var(--color-bg);
    color: var(--color-text);
  }

  .hero {
    padding: var(--spacing-xl) var(--spacing-lg);
    text-align: center;
    background: linear-gradient(135deg, rgba(255, 107, 53, 0.1) 0%, rgba(247, 147, 30, 0.05) 100%);
    border-bottom: 1px solid var(--color-border);
  }

  .title {
    font-family: 'Space Grotesk', sans-serif;
    font-size: clamp(2.5rem, 8vw, 5rem);
    font-weight: 700;
    margin: 0;
    background: linear-gradient(135deg, var(--color-primary), var(--color-secondary));
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    letter-spacing: -0.02em;
  }

  .subtitle {
    font-size: 1.25rem;
    color: var(--color-text-muted);
    margin: var(--spacing-md) 0 0;
  }

  .projects-section {
    padding: var(--spacing-xl) var(--spacing-lg);
  }

  .container {
    max-width: 1400px;
    margin: 0 auto;
  }

  .filter-container {
    display: flex;
    gap: var(--spacing-md);
    margin-bottom: var(--spacing-xl);
    flex-wrap: wrap;
    justify-content: center;
  }

  .filter-btn {
    padding: 0.75rem 1.5rem;
    font-size: 1rem;
    font-weight: 600;
    background: var(--color-surface);
    color: var(--color-text-muted);
    border: 2px solid var(--color-border);
    border-radius: 100px;
    cursor: pointer;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    position: relative;
    overflow: hidden;
  }

  .filter-btn::before {
    content: '';
    position: absolute;
    top: 50%;
    left: 50%;
    width: 0;
    height: 0;
    border-radius: 50%;
    background: linear-gradient(135deg, var(--color-primary), var(--color-secondary));
    transform: translate(-50%, -50%);
    transition: width 0.4s ease, height 0.4s ease;
    z-index: 0;
  }

  .filter-btn:hover::before {
    width: 300px;
    height: 300px;
  }

  .filter-btn span {
    position: relative;
    z-index: 1;
  }

  .filter-btn:hover {
    color: var(--color-text);
    border-color: var(--color-primary);
    transform: translateY(-2px);
  }

  .filter-btn[data-active="true"] {
    background: linear-gradient(135deg, var(--color-primary), var(--color-secondary));
    color: white;
    border-color: transparent;
  }

  .projects-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(350px, 1fr));
    gap: var(--spacing-lg);
    animation: fadeIn 0.6s ease-out;
  }

  .project-dialog {
    border: none;
    border-radius: 20px;
    padding: 0;
    max-width: 900px;
    width: 90vw;
    max-height: 85vh;
    background: var(--color-surface);
    box-shadow: 0 20px 60px rgba(0, 0, 0, 0.5);
    overflow: hidden;
  }

  .project-dialog::backdrop {
    background: rgba(10, 10, 15, 0.8);
    backdrop-filter: blur(10px);
  }

  .dialog-content {
    position: relative;
    overflow-y: auto;
    max-height: 85vh;
  }

  .close-btn {
    position: sticky;
    top: var(--spacing-md);
    right: var(--spacing-md);
    float: right;
    background: rgba(255, 255, 255, 0.1);
    border: 1px solid var(--color-border);
    border-radius: 50%;
    width: 40px;
    height: 40px;
    display: flex;
    align-items: center;
    justify-content: center;
    cursor: pointer;
    transition: all 0.3s ease;
    color: var(--color-text);
    z-index: 10;
    backdrop-filter: blur(10px);
  }

  .close-btn:hover {
    background: var(--color-primary);
    border-color: var(--color-primary);
    transform: rotate(90deg);
  }

  @keyframes fadeIn {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  @media (max-width: 768px) {
    .projects-grid {
      grid-template-columns: 1fr;
    }

    .filter-container {
      gap: var(--spacing-sm);
    }

    .filter-btn {
      padding: 0.5rem 1rem;
      font-size: 0.9rem;
    }
  }
</style>

<script>
  // Filter functionality
  const filterButtons = document.querySelectorAll('.filter-btn');
  const projectCards = document.querySelectorAll('.project-card');

  filterButtons.forEach(button => {
    button.addEventListener('click', () => {
      const category = button.getAttribute('data-category');
      
      // Update active state
      filterButtons.forEach(btn => btn.setAttribute('data-active', 'false'));
      button.setAttribute('data-active', 'true');

      // Filter projects
      projectCards.forEach(card => {
        const cardCategories = card.getAttribute('data-categories');
        
        if (!cardCategories) {
          card.style.display = 'none';
          return;
        }

        // Split the categories string back into an array
        const categoriesArray = cardCategories.split(',').map(cat => cat.trim().toLowerCase());
        
        // Show if "all" is selected OR if the card has the selected category
        if (category === 'all' || categoriesArray.includes(category)) {
          card.style.display = 'block';
          card.style.animation = 'fadeIn 0.4s ease-out';
        } else {
          card.style.display = 'none';
        }
      });
    });
  });

  // Dialog functionality
  const dialog = document.getElementById('project-dialog') as HTMLDialogElement;
  const dialogBody = document.getElementById('dialog-body');
  const closeBtn = document.querySelector('.close-btn');

  document.addEventListener('click', (e) => {
    const target = e.target as HTMLElement;
    if (target.closest('.project-card')) {
      const card = target.closest('.project-card');
      const projectId = card?.getAttribute('data-project-id');
      
      if (projectId && dialogBody) {
        // Load project content
        const contentElement = document.getElementById(`project-content-${projectId}`);
        if (contentElement) {
          dialogBody.innerHTML = contentElement.innerHTML;
          dialog?.showModal();
        }
      }
    }
  });

  closeBtn?.addEventListener('click', () => {
    dialog?.close();
  });

  dialog?.addEventListener('click', (e) => {
    const rect = dialog.getBoundingClientRect();
    const clickedOutside = (
      e.clientX < rect.left ||
      e.clientX > rect.right ||
      e.clientY < rect.top ||
      e.clientY > rect.bottom
    );
    
    if (clickedOutside) {
      dialog.close();
    }
  });
</script>