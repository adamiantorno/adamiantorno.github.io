---

import { render } from "astro:content";
import { type CollectionEntry } from "astro:content";

interface Props {
    project: CollectionEntry<"projects">
};

const { project } = Astro.props;
const { data } = project;
const { Content } = await render(project);

---
<div class="card-wrapper">
    <button 
        class="project-card" 
        data-project-id={data.project_id}
        aria-label={`View details for ${data.title}`}>
        
        <div class="card-content">

            <div class="card-img">
                <img src={data.image} alt={data.title} class="img-body">
            </div>

            <div class="card-header">
                {data.title}
            </div>

            <div class="card-tags">
                {data.tags?.map((tag) => (
                    <span class="p-tag">{tag} </span>
                ))}
            </div>

            <div class="card-desc">
                {data.description}
            </div>

            <div class="details-link">
                click for more details
            </div>
        </div>

    </button>
</div>


<!-- Hidden content for dialog -->
<div id={`project-content-${data.project_id}`} style="display: none;">
  <div class="dialog-body">
    <div class="prose">
        <Content />
    </div>
  </div>
</div>

<style>

    .card-wrapper {
        height: 100%;
    }

    .project-card {
        width: 100%;
        height: 100%;
        background-color: #0B0B3A;
        border-radius: 3px;
        border: none;
        overflow: hidden;
        min-height: 400px;
        z-index: 1;
        display: flex;
        flex-direction: column;
        text-align: left;
        transition: transform 0.25s ease, box-shadow 0.25s ease;
    }

    .project-card:hover {
        transform: translateY(-2px);
        box-shadow: 0 0px 35px rgba(0,0,0,0.4);
    }

    .card-content {
        display: flex;
        flex-direction: column;
        flex: 1;
        padding: 1rem;
    }

    .card-img {
        width: 100%;
        height: 200px;
        overflow: hidden;
        padding-bottom: 1rem;
        margin-bottom: 0.5rem;
        border-bottom: 1px solid rgba(255,255,255,0.08);
    }

    .img-body {
        width: 100%;
        height: 100%;
        object-fit: cover;
    }

    .card-header {
        font-size: 1.2rem;
        font-weight: 600;
        margin-bottom: 0.5rem;
        color: #8EEAE5;
    }

    .card-tags {
        display: flex;
        flex-wrap: wrap;
        gap: 0.5rem;
        margin-bottom: 0.75rem;
    }

    .p-tag {
        font-size: 0.8rem;
        padding: 4px 8px;
        background: rgba(255,255,255,0.08);
        border-radius: 999px;
        color: #c6bbe2;
    }

    .card-desc {
        color: #F0E9CD;
        font-size: 0.95rem;
        line-height: 1.5;
        margin-bottom: 1rem;
    }


    .details-link {
        margin-top: auto;
        padding-top: 1rem;
        font-size: 0.85rem;
        text-transform: uppercase;
        letter-spacing: 0.05em;
        color: #ffffff;
        opacity: 0.7;
        border-top: 1px solid rgba(255,255,255,0.08);
        transition: opacity 0.2s ease;
    }

</style>

